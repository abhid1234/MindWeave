{
  "manifest_version": 3,
  "name": "Mindweave - Quick Capture",
  "version": "1.0.0",
  "description": "Save webpages to your Mindweave knowledge hub with one click",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://mindweave.app/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
