{
  "name": "mindweave",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered personal knowledge hub",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:generate": "turbo run db:generate",
    "db:migrate": "turbo run db:migrate",
    "db:push": "turbo run db:push",
    "db:studio": "turbo run db:studio",
    "docker:up": "docker compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker compose -f docker/docker-compose.yml down",
    "docker:logs": "docker compose -f docker/docker-compose.yml logs -f",
    "gcp:setup-secrets": "./scripts/setup-gcp-secrets.sh",
    "gcp:deploy": "./scripts/deploy-gcp.sh",
    "gcp:build": "gcloud builds submit --config=cloudbuild.yaml",
    "mobile:build": "npm run build --prefix apps/mobile",
    "mobile:sync": "npm run sync --prefix apps/mobile",
    "mobile:ios": "npm run ios --prefix apps/mobile",
    "mobile:android": "npm run android --prefix apps/mobile"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "eslint": "^8.56.0",
    "eslint-config-next": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "turbo": "^2.0.0",
    "typescript": "^5.5.0"
  },
  "packageManager": "pnpm@9.5.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.5.0"
  }
}
